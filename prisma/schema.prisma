generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL_LOCAL")
}

model Account {
  account_id       Int    @id @default(autoincrement())
  account_username String
  account_password String
  account_email    String
}

model Services {
  service_id          Int       @id @default(autoincrement())
  service_name        String
  service_icon        String
  service_description String
  messages            Message[]
}

model Contact {
  contact_id    Int    @id @default(autoincrement())
  contact_name  String
  contact_value String 
}

model Message {
  message_id          Int          @id @default(autoincrement())
  message_username    String
  message_subject     String       @default("")
  message_email       String
  message_description String
  created_at DateTime @default(now())
  
  service             Services?     @relation(fields: [servicesService_id], references: [service_id])
  servicesService_id  Int?
  notification        Notification?
}

model Notification {
  notification_id          Int     @id @default(autoincrement())
  notification_title       String
  notification_description String
  
  message                  Message @relation(fields: [message_id], references: [message_id])
  message_id               Int     @unique 
}